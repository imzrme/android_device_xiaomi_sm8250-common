allow xiaomisettings_app vendor_sysfs_graphics:file write;
r_dir_file(xiaomisettings_app, vendor_sysfs_graphics)
allow xiaomisettings_app vendor_sysfs_graphics:dir search;
allow xiaomisettings_app vendor_sysfs_graphics:file rw_file_perms;

get_prop(xiaomisettings_app, vendor_fastcharge_prop)
